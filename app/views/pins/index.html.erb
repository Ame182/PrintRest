<p id="notice"><%= notice %></p>


<div class="container-fluid">
<h1>Pins</h1>
  <% @pins.each do |pin| %>

          <div class="col-md-3 float-left">
          <div class="img-thumbnail">
          <%= pin.description %>
          <img src="<%= pin.photo %>" class='img-fluid'>
            <div class="buttons" style="margin-top:10px; margin-bottom:10px">
              <%= link_to 'Show', pin, :class => 'btn btn-danger' %>
              <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn btn-danger' %>
               <% if user_signed_in? %>
              <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
              <% end %>

            </div>

          </div>

    </div>


  <% end %>

  <br>
  <% if user_signed_in? %>
    <div class="btn btn-danger" style="color:white">
      <%= link_to 'New Pin', new_pin_path %>
    </div> 
  <% end %>
</div>

